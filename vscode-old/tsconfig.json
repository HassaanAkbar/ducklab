{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true /* enable all strict type-checking options */,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "out"
  ]
}